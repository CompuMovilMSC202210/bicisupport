<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.BicycleRegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_bs" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/register_text"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/bici_data"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <ImageView
                android:id="@+id/bici_register_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:srcCompat="@drawable/profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bici_register_gallery_button"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:text="@string/gallery_text"
                    android:textColor="@color/project_blue"
                    android:textSize="13sp"
                    app:backgroundTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bici_register_camera_button"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:text="@string/camera_text"
                    android:textColor="@color/project_blue"
                    android:textSize="13sp"
                    app:backgroundTint="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="60dp"
                android:paddingTop="7dp"
                android:text="@string/brand"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <Spinner
                android:id="@+id/spinner_brand"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/custom_spinner_rounded"
                android:entries="@array/brand_bike"
                android:popupBackground="@drawable/custom_edit_text_rounded"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/ModificarCuenta_LabelNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="60dp"
                android:text="@string/color"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <Spinner
                android:id="@+id/spinner_color"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/custom_spinner_rounded"
                android:entries="@array/color_bike"
                android:popupBackground="@drawable/custom_edit_text_rounded"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="60dp"
                android:text="@string/model"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <EditText
                android:id="@+id/edit_text_model"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/custom_edit_text_rounded"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="60dp"
                android:text="@string/type"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/custom_spinner_rounded"
                android:entries="@array/type_bike"
                android:popupBackground="@drawable/custom_edit_text_rounded"
                android:spinnerMode="dropdown" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/finishButton"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_button"
                android:text="@string/end_register"
                android:textColor="@color/project_blue"
                android:textStyle="bold"
                app:backgroundTint="@color/white" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>